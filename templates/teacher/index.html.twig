{% extends 'base.html.twig' %}

{% block title %}Hello TeacherController!{% endblock %}

{% block body %}
<style>
    .teacher_wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .teacher_wrapper code { background: #F5F5F5; padding: 2px 6px; }
    input {margin-left: 20%;  padding: 6px 12px;}
</style>

<div class="teacher_wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    <h1>Teacher name is: {{ teacher_name }}! ✅</h1>

    <form action="{{ path ('goto_student_index') }}">
        <input type="submit" value="GOTO Student Index">
    </form>

</div>
{% endblock %}
